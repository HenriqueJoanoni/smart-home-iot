# ====================================
# FLASK CONFIGURATION
# ====================================
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True

# ====================================
# SERVER
# ====================================
HOST=0.0.0.0
PORT=5000

# ====================================
# CORS
# ====================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ====================================
# PUBNUB CREDENTIALS
# Get from:  https://admin.pubnub.com/
# ====================================
PUBNUB_PUBLISH_KEY=your_publish_key_here
PUBNUB_SUBSCRIBE_KEY=your_subscribe_key_here
PUBNUB_SECRET_KEY=your_secret_key_here

# ====================================
# PUBNUB CHANNELS
# ====================================
PUBNUB_SENSOR_CHANNEL=smart-home-sensors
PUBNUB_CONTROL_CHANNEL=smart-home-control
PUBNUB_ALERT_CHANNEL=smart-home-alerts

# ====================================
# PUBNUB SETTINGS
# ====================================
PUBNUB_UUID=backend-server
PUBNUB_ENABLE_SUBSCRIBE=True
PUBNUB_ENABLE_PRESENCE=True

# ====================================
# DATABASE
# ====================================
DATABASE_URL=postgresql://user:password@localhost:5432/smarthome

# ====================================
# LOGGING
# ====================================
LOG_LEVEL=INFO
LOG_FILE=logs/backend.log

# ====================================
# ALERT THRESHOLDS
# ====================================
ALERT_TEMP_HIGH=30.0
ALERT_TEMP_LOW=15.0
ALERT_HUMIDITY_HIGH=70.0
ALERT_HUMIDITY_LOW=30.0
ALERT_LIGHT_LOW=50.0