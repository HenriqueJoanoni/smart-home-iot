# ======================
# DATABASE CONFIGURATION
# ======================
POSTGRES_USER=iot_user
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=smart_home_iot
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@timescaledb:5432/${POSTGRES_DB}

# ======================
# PUBNUB CONFIGURATION
# ======================
# Get your keys from:  https://dashboard.pubnub.com/
PUBNUB_PUBLISH_KEY=your_publish_key_here
PUBNUB_SUBSCRIBE_KEY=your_subscribe_key_here
PUBNUB_SECRET_KEY=your_secret_key_here

# PubNub Channels
PUBNUB_SENSOR_CHANNEL=smart-home-sensors
PUBNUB_CONTROL_CHANNEL=smart-home-control
PUBNUB_ALERT_CHANNEL=smart-home-alerts

# ======================
# FLASK CONFIGURATION
# ======================
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_SECRET_KEY=your_secret_key_here_change_in_production

# ======================
# REACT CONFIGURATION
# ======================
REACT_APP_API_URL=http://localhost:5000
REACT_APP_PUBNUB_PUBLISH_KEY=${PUBNUB_PUBLISH_KEY}
REACT_APP_PUBNUB_SUBSCRIBE_KEY=${PUBNUB_SUBSCRIBE_KEY}

# ======================
# ALERT THRESHOLDS
# ======================
ALERT_TEMP_HIGH=30.0
ALERT_TEMP_LOW=15.0
ALERT_HUMIDITY_HIGH=80.0
ALERT_HUMIDITY_LOW=30.0
ALERT_LIGHT_LOW=100.0

# ======================
# RASPBERRY PI GPIO PINS
# ======================
# DHT22 Sensor
GPIO_DHT22=4

# LDR Sensor (ADC via MCP3008 or direct GPIO)
GPIO_LDR=17

# PIR Motion Sensor
GPIO_PIR=27

# LEDs
GPIO_LED_RED=22
GPIO_LED_GREEN=23
GPIO_LED_BLUE=24

# Buzzer
GPIO_BUZZER=25

# ======================
# MONITORING INTERVALS (seconds)
# ======================
SENSOR_READ_INTERVAL=5
DATA_PUBLISH_INTERVAL=10
ALERT_CHECK_INTERVAL=15

# ======================
# AWS CONFIGURATION (Production)
# ======================
AWS_REGION=us-east-1
AWS_S3_BUCKET=smart-home-iot-assets
EC2_PUBLIC_IP=your_ec2_public_ip_here

# ======================
# LOGGING
# ======================
LOG_LEVEL=INFO
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=5