# ====================================
# PUBNUB CREDENTIALS (Raspberry Pi Device)
# ====================================
PUBNUB_PUBLISH_KEY=pub-c-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
PUBNUB_SUBSCRIBE_KEY=sub-c-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ====================================
# PUBNUB CHANNELS
# ====================================
PUBNUB_SENSOR_CHANNEL=smart-home-sensors
PUBNUB_CONTROL_CHANNEL=smart-home-control
PUBNUB_ALERT_CHANNEL=smart-home-alerts

# ====================================
# DEVICE IDENTIFICATION
# ====================================
PUBNUB_UUID=raspberry-pi-main
DEVICE_ID=rpi-001
DEVICE_LOCATION=living_room

# ====================================
# SENSOR SETTINGS
# ====================================
SENSOR_READ_INTERVAL=5
SIMULATION_MODE=false

# ====================================
# LOGGING
# ====================================
LOG_LEVEL=INFO
LOG_FILE=logs/raspberry_pi.log