# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================

# Database
POSTGRES_USER=smarthome_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_12345
POSTGRES_DB=smarthome_db
DB_PORT=5432

# Flask
FLASK_SECRET_KEY=CHANGE_THIS_SECRET_KEY_32_CHARS_MIN
FLASK_ENV=production

# PubNub
PUBNUB_PUBLISH_KEY=pub-c-YOUR-KEY-HERE
PUBNUB_SUBSCRIBE_KEY=sub-c-YOUR-KEY-HERE
PUBNUB_SECRET_KEY=sec-c-YOUR-KEY-HERE
PUBNUB_SENSOR_CHANNEL=smart-home-sensors
PUBNUB_CONTROL_CHANNEL=smart-home-control
PUBNUB_ALERT_CHANNEL=smart-home-alerts

# Alert Thresholds
ALERT_TEMP_HIGH=30
ALERT_TEMP_LOW=15
ALERT_HUMIDITY_HIGH=70
ALERT_HUMIDITY_LOW=30
ALERT_LIGHT_LOW=100

# Frontend
REACT_APP_API_URL=http://YOUR_EC2_PUBLIC_IP/api
# or domain:  https://yourdomain.com/api

# Redis (optional)
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD